{
  "compilerOptions": {
    "target": "ES2022",
    "module": "es2022",
    "removeComments": true,
    "declaration": true,
    "preserveConstEnums": true,
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "importHelpers": true
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
